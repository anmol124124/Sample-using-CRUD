# Node Environment
NODE_ENV=development
PORT=4000

# PostgreSQL Configuration
PGHOST=localhost
PGPORT=5432
PGDATABASE=exam_mgmt
PGUSER=postgres
PGPASSWORD=postgres

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=1d

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Upload Configuration
UPLOAD_DIR=./src/uploads
MAX_UPLOAD_BYTES=52428800

# Force sync (drops and recreates tables - USE WITH CAUTION in development only)
FORCE_SYNC=false
